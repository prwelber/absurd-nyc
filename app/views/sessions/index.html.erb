<!-- /users -->
<div class="login">
	<div class="form_header">
		<h2>LOG IN</h2>
	</div>

	<%= form_tag sessions_path do %>
		<%= text_field_tag :username, nil, placeholder: "Username", class: "input" %>
		<%= password_field_tag :password, nil, placeholder: "Password", class: "input" %>
		<%= button_tag "LOG IN", class: "submit_button" %>
	<% end %>
</div>

<div class="signup">
	<div class="form_header">
		<h2>SIGN UP</h2>
	</div>

	<%= form_for @user do |f| %>
		<%= f.text_field :username, placeholder: "Username", class: "input" %>
		<%= f.password_field :password, placeholder: "Password", class: "input" %>
		<%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "input" %>
		<%= button_tag "SIGN UP", class: "submit_button" %>
	<% end %>
</div>


<h4><%= flash[:error] %></h4>

<div class='errors'>
<% if flash[:create] %>
	<h4>Fix your errors!</h4>
	<% flash[:create].each do |msg| %>
		<h4><%= msg %></h4>
	<% end end %>
</div>