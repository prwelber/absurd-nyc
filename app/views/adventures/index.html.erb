<div class="saved_wrapper pure-g">
  <div class="pure-u-1 form_header">
    <h2><%=User.find(session[:user_id]).username%>'s Adventures</h2>
  </div>

	<% @adventures.each do |adv| %>
	  <div class="pure-u-1-3">
	      <div class="saved_adventure">
	        <h2><%=adv.created_at.strftime('%m.%d.%y')%>
	        </h2>
			<ul>
				<li class="resource"><a href="<%=adv.restaurant.url%>" target="_blank">
					<%=adv.restaurant.restaurant_name%></a></li>
				<li class="resource"><a href="<%=adv.bar.url%>" target="_blank"><%=adv.bar.bar_name%></a></li>
				<li class="resource"><%=adv.weekend.weekend_name%></li>
			</ul>
		
	      </div>
	  </div>

	<% end %>
</div>
